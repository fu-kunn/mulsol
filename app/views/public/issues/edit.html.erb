<div class="container">

    <div class="row">
      <div class="col-3 mt-5">
        <h5 class="text-center bg-light">ニーズ・課題編集</h5>
      </div>
    </div>

    <div class="row">
      <div class="col-12 mt-3">
        <%= form_with(model:@issue, url:issue_path, method: :patch, local:true) do |f| %>
        <form>
          <div class="form-group col-xs-9">
            <%= f.label :ニーズ,class: "col-sm-2" %>
             <%= f.text_area :needs, autofocus: true %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :課題,class: "col-sm-2" %>
             <%= f.text_area :challenge %>
          </div>

          <div class="col-12">
            <div>
              <%= f.submit "編集内容を保存", class: 'btn btn-success offset-2' %>
            </div>
          </div>
          <% end %>
        </form>
      </div>
    </div>

  </div>