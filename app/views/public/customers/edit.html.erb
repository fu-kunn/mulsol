<div class="container">
    <div class="row">
      <div class="col-12 mt-5">
        <h5 class="text-center font-weight-bold">企業情報編集</h5>
        <div class="text-right mt-3" style="font-size: 15px;">
          <%= link_to new_issue_path do %>
            <div class="fas fa-handshake fa-3x mr-4" style="color: #343a40;"></div><br>
            <div class="text-dark">ニーズ・課題登録</div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 mt-3 offset-1">
        <%= form_with(model:@customer, url:customer_path, local:true) do |f| %>

        <form>
          <div class="form-group col-xs-9">
            <%= f.label :企業名,class: "col-sm-2" %>
             <%= f.text_field :company_name, autofocus: true %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :企業名フリガナ,class: "col-sm-2" %>
            <%= f.text_field :company_name_kana %>
          </div>
          <!--業種の登録-->
          <div class="form-group col-xs-9">
            <%= f.label :業種名, class: "col-sm-2" %>
            <%= f.collection_select :sector_id, Sector.all, :id, :name, include_blank: "--選択してください--", class: "col-sm-5" %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :郵便番号, class: "col-sm-2" %>
            <%= f.text_field :post_code %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :住所, class: "col-sm-2" %>
            <%= f.text_field :address, class: "col-6 p-0" %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :氏名,class: "col-sm-2" %>
             <%= f.text_field :first_name %>
             <%= f.text_field :last_name %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :フリガナ, class: "col-sm-2"%>
            <%= f.text_field :first_name_kana %>
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :電話番号, class: "col-sm-2" %>
            <%= f.text_field :tel %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :メールアドレス, class: "col-sm-2" %>
            <%= f.email_field :email %>
          </div>
          <div class="form-group col-xs-9">
            <%= f.label :画像, class: "col-sm-2" %>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="col-12">
            <div>
              <%= f.submit "編集を保存", class: 'btn btn-success offset-2 rounded-pill' %>
              <%= link_to '退会する', unsubscribe_customers_path, class: "btn btn-default btn-secondary offset-3 rounded-pill" %>
            </div>
          </div>
          <% end %>
        </form>
      </div>
    </div>

  </div>

  <!--フッターを固定  -->
  <div class="container">

    <div class="row">
      <div class="col-12">
        <p class="footer-absolute text-center text-bottom">©︎2022 fu-kun<p>
      </div>
    </div>
  </div>
