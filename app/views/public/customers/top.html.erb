<!--管理者で登録した情報を表示できるようにする-->
<div class = "container">
  <div class = "row">
    <!--トップ画面-->
    <div class = "col-sm-8 px-5 px-sm-0 mx-auto mt-4">
      <div class="d-flex align-items-center justify-content-center text-center">
        <img src="/assets/IMG_0471.PNG" class="card-img" alt="Card image">
        <div class="card-img-overlay ">
          <div class="px-5 py-4"  style="background-color:rgba(255,255,255,0.5); font-family: sans-serif; margin-top: 170px;">
            <h3 class="mt-4 font-weight-bold" style="color: #343a40;">企業と企業をつなぐ、</h3>
            <h3 class="font-weight-bold" style="color: #343a40;">プラットフォーム</h3>
          </div>
        </div>
      </div>
    </div>

    <!--新着のお知らせ1件を表示-->
    <div class="col-12">
      <table class="d-flex align-items-center justify-content-center">
        <tr style="background-color: #f5f5f5;" >
          <th>
            <button type="button" class="btn btn-outline-primary ml-1">お知らせ</button>
          </th>
          <td>
            <p class="ml-3 mt-2 mr-1" style="text-decoration:underline;">専門家が教える補助金・助成金セミナー情報</p>
          </td>
        </tr>
      </table>
    </div>

    <!--機能紹介ページ-->
    <div class="m_card col-12 d-flex align-items-center justify-content-center">
      <div class="t_card bg-dark text-center" style="width: 600px;">
        <div class="heading">
          <h5 class="mt-3">機能紹介</h5>
        </div>
      </div>
    </div>
    <div class="col-6 offset-3 d-flex align-items-center justify-content-center">
       <div class="container_top">
        <div class="theTarget">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators" style="background-color: rgba(0,0,0,.3);">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active " style="background-color:#f9f9f9;"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1" class="" style="background-color:#f9f9f9;"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2" class="" style="background-color:#f9f9f9;"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="3" class="" style="background-color:#f9f9f9;"></li>
            </ol>
            <div class="carousel-inner carousel-fade">
              <div class="carousel-item active">
                <%= image_tag 'top4.jpg', class: "d-block ",size: '600x400' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'top1.jpg', class: "d-block ",size: '600x400' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'top2.jpg', class: "d-block ",size: '600x400' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'top3.jpg', class: "d-block ",size: '600x400' %>
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!--セミナー紹介ページ-->
    <div class="m_card col-12 d-flex align-items-center justify-content-center">
      <div class="t_card bg-dark text-center" style="width: 600px;">
        <div class="heading">
          <h5 class="mt-3">セミナー紹介</h5>
        </div>
      </div>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <table style="border-bottom: 2px dotted #000; width: 550px;">
        <tbody>
          <tr>
            <th>
              <%= image_tag 'no_image.jpg', size: "150x150" %>
            </th>
            <td>
              <p class="font-weight-bold" style="text-decoration:underline;">【オンライン開催】事業承継セミナー</p>
              <p style="color: #666;">日時:2022年4月30日(土) 16:00~17:00　場所：Zoom</p>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <table style="border-bottom: 2px dotted #000; width: 550px;">
        <tbody>
          <tr>
            <th>
              <%= image_tag 'no_image.jpg', size: "150x150" %>
            </th>
            <td>
              <p class="font-weight-bold" style="text-decoration:underline;">【オンライン開催】制度を活用した積み立て投資セミナー</p>
              <p style="color: #666;">日時:2022年5月13日(金) 10:00~11:00　場所：Zoom</p>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!--補助金・助成金情報-->
    <div class="m_card col-12 d-flex align-items-center justify-content-center">
      <div class="t_card bg-dark text-center" style="width: 600px;">
        <div class="heading">
          <h5 class="mt-3">補助金・助成金</h5>
        </div>
      </div>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <table style="border-bottom: 2px dotted #000; width: 550px;">
        <tbody>
          <tr>
            <th>
              <p class="text-dark mt-5 mb-3" style="text-decoration:underline;">
                補助金：「令和4年度　IT導入補助金」
                IT導入補助金は、中小企業・小規模事業者等が自社の課題やニーズに合った
                ITツールの導入を支援する補助金です。
              </p>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <table style="border-bottom: 2px dotted #000; width: 550px;">
        <tbody>
          <tr>
            <th>
              <p class="text-dark mt-5 mb-3" style="text-decoration:underline;">
                助成金：「第1回募集　明日のチャレンジ中小企業基盤強化事業助成金」
              </p>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
    <!--もっと見る-->
    <div class="col-12 text-center mt-5">
      <p style="color: #19aac4;">もっと見る</p>
    </div>

    <!--お知らせページ-->
    <div class="m_card col-12 d-flex align-items-center justify-content-center">
      <div class="t_card bg-dark text-center" style="width: 600px;">
        <div class="heading">
          <h5 class="mt-3">お知らせ</h5><br>
        </div>
      </div>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <table style="border-bottom: 2px dotted #000;">
        <tbody>
          <tr>
            <th>
              <p class="text-dark mr-5 mt-5 mb-5">2022年3月18日(金)</p>
            </th>
            <td>
              <p class="mt-5 mb-5" style="text-decoration:underline;">【専門家が教える補助金・助成金セミナー情報】</p>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-center">
      <table style="border-bottom: 2px dotted #000;">
        <tbody>
          <tr>
            <th>
              <p class="text-dark mr-5 mt-5 mb-5">2022年2月18日(金)</p>
            </th>
            <td>
              <p class="mt-5 mb-5" style="text-decoration:underline;">【募集開始！！】第○次　○○○補助金のご案内</p>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

