<% notifications = @notifications.where.not(visitor_id: current_customer.id) %>

<% if notifications.exists? %>
  <%= render "public/notifications/notification", notifications: @notifications %>
  <% paginate notifications %>
<% else %>
  <div class="container">
    <div class="row">
      <div class="card mt-2 col-8 offset-2" style="background-color: #f5f5f5; height: 5rem; box-shadow: 2px 2px 4px;">
        <div class="mb-3 mt-2" style="text-align: center">
          <p>通知はありません</p>
        </div>
      </div>
      </div>
    </div>
  </div>
<% end %>