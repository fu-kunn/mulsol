<% notifications.each do |notification| %>
<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="container">
  <div class="row">
    <div class="card mt-2 col-8 offset-2" style="background-color: #f5f5f5; height: 5rem; box-shadow: 2px 2px 4px;">
      <div class="mb-3 mt-2" style="text-align: center">
        <%= link_to customer_path(visitor) do %>
          <%= visitor.company_name %>さんが
        <% end %>
        <% case notification.action %>
          <% when "follow" then %>
            <%= "あなたをフォローしました" %>
          <% when "chat" then %>
            <%= "あなたにメッセージを送りました" %>
        <% end %>
      </div>
      <div class="text-right mr-4 mb-3">
        <%= "(#{time_ago_in_words(notification.created_at)}前)" %>
      </div>
    </div>
  </div>
</div>
<% end %>