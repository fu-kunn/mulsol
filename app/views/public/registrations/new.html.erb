<div class="container mt-5" style="background-color: #000;">

  <div class="row">
    <div class="col-12 mt-5">
      <h5 class="text-center text-light font-weight-bold">新規会員登録</h5>
      <p></p>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <form>
        <div class="form-group col-xs-9 text-center">
          <%= f.label :企業名,class: "col-sm-3 text-light mt-5" %>
          <%= f.text_field :company_name, autofocus: true, class: "signup_field mt-0" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :企業名フリガナ,class: "col-sm-3 text-light mt-3" %>
          <%= f.text_field :company_name_kana, autofocus: true, class: "signup_field mt-0" %>
        </div>

        <div class="form-group col-xs-9 text-center">
         <%= f.label :メールアドレス, class: "col-sm-3 mr-3 text-light mt-3"%>
         <%= f.email_field :email, autofocus: true, :placeholder => "sample@example.com", class: "col-5 pl-0 signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 mr-3 text-light mt-3" %>
          <%= f.text_field :post_code, autofocus: true, :placeholder => "0000000", class: "signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :住所, class: "col-sm-3 mr-3 text-light mt-3"  %>
          <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", class: "col-5 pl-0 signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :"代表者氏名( 姓 )", class: "col-sm-3 text-light mt-3" %>
          <%= f.text_field :first_name, autofocus: true, :placeholder => "田中", class: "signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :"代表者氏名( 名 )", class: "col-sm-3 text-light" %>
          <%= f.text_field :last_name, autofocus: true, :placeholder => "太郎", class: "signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :"代表者フリガナ(セイ)", class: "col-sm-3 text-light mt-3" %>
          <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "タナカ" , class: "signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :"代表者フリガナ(メイ)", class: "col-sm-3 text-light mt-3" %>
          <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "タロウ", class: "signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 mr-3 text-light mt-3" %>
          <%= f.text_field :tel, autofocus: true, :placeholder => "0000000000", class: "signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center">
          <label class= "col-sm-3 text-light mt-3">
             <%= f.label :パスワード %>
             <% if @minimum_password_length %>
               <em>(<%= @minimum_password_length %>文字以上)</em>
             <% end %>
          </label>
          <%= f.password_field :password, autocomplete: "new-password", class: "signup_field" %>
        </div>

        <div class="form-group col-xs-9 text-center mt-3">
          <%= f.label :"パスワード(確認用)", class: "col-sm-3 text-light" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup_field" %>
        </div>

        <div class="actions col-xs-9">
          <%= f.submit "新規登録",class: "btn mt-5 mb-5 btn-dark signup_actions" %>
        </div>

      </form>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mt-5">
      <h5 class="text-center text-light">既に登録済みの方</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-light mb-3">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>


</div>

<!--フッターを固定  -->
  <div class="container">

    <div class="row">
      <div class="col-12">
        <p class="footer-absolute text-center text-bottom">©︎2022 fu-kun<p>
      </div>
    </div>
  </div>