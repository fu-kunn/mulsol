<div class="container">

  <div class="row">
    <div class="col-3 mt-5">
      <h5 class="text-center bg-light">新規会員登録</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <form>
        <div class="form-group col-xs-9">
          <%= f.label :企業名,class: "col-sm-3" %>
          <%= f.text_field :company_name, autofocus: true, class: "ml-2 mr-4" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :企業名フリガナ,class: "col-sm-3" %>
          <%= f.text_field :company_name_kana, autofocus: true, class: "ml-2 mr-4" %>
        </div>

        <div class="form-group col-xs-9">
         <%= f.label :メールアドレス, class: "col-sm-3 mr-3"%>
         <%= f.email_field :email, autofocus: true, :placeholder => "sample@example.com", class: "col-5 ml-4" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-3 mr-3" %>
          <%= f.text_field :post_code, autofocus: true, :placeholder => "0000000", class: "ml-4" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :住所, class: "col-sm-3 mr-3"  %>
          <%= f.text_field :address, autofocus: true, :placeholder => "東京都渋谷区代々木神園町0-0", class: "col-5 ml-4" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :代表者氏名,class: "col-sm-3" %>
          <%= f.label :"( 姓 )" %>
          <%= f.text_field :first_name, autofocus: true, :placeholder => "田中", class: "ml-2 mr-4" %>
          <%= f.label :"( 名 )" %>
          <%= f.text_field :last_name, autofocus: true, :placeholder => "太郎", class: "ml-1" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :代表者フリガナ, class: "col-sm-3"%>
          <%= f.label :"(セイ)"%>
          <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "タナカ" , class: "mr-4"%>
          <%= f.label :"(メイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "タロウ" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-3 mr-3" %>
          <%= f.text_field :tel, autofocus: true, :placeholder => "0000000000", class: "ml-4" %>
        </div>

        <div class="form-group col-xs-9">
          <label class= "col-sm-3 mr-3">
             <%= f.label :パスワード %>
             <% if @minimum_password_length %>
               <em>(<%= @minimum_password_length %>文字以上)</em>
             <% end %>
          </label>
          <%= f.password_field :password, autocomplete: "new-password", class: "ml-4" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"パスワード(確認用)", class: "col-sm-3 mr-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ml-4" %>
        </div>

        <div class="actions col-xs-9 ml-5">
          <%= f.submit "新規登録",class: "btn btn-success mt-5 mb-5 col-2 offset-3" %>
        </div>

      </form>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 mt-5">
      <h5 class="text-center bg-light">既に登録済みの方</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-4 ml-5">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>

</div>