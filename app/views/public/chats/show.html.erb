<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h5>CHAT WITH <%= @customer.company_name %></h5>

      <table class="message table">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_customer.company_name %></th>
            <th style="text-align: rigth; font-size: 20px;"><%= @customer.company_name %></th>
          </tr>
        </thead>
        <%= @chats.each do |chat| %>
          <% if chat.customer_id == current_customer.id %>
          <tbody>
            <tr>
              <th>
                <p style="text-align: left;"><%= chat.message %></p>
              </th>
              <th></th>
            </tr>
          </tbody>
          <% else %>
            <tr>
              <th></th>
              <th>
                <p style="text-align: right;"><%= chat.message %></p>
              </th>
            </tr>
          <% end %>
        <% end %>
      </table>

      <%= form_with(model: @chat, local: false) do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "SEND", class:"btn btn-suuccess chat-btn"%>
      <% end %>
    </div>
  </div>
</div>
