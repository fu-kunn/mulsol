<h2 style="text-align:center"><%= "#{@partner.first_name}#{@partner.last_name}さんとのチャット" %></h2>
<div id="chats">
  <% @chats.each do |chat| %>
    <% if chat.customer_id==current_customer.id %>
      <div class="mycomment">
        <p><%= chat.sentence %></p>
      </div>
    <% else %>
      <div class="fukidasi">
        <!--<div class="faceicon">-->
        <!--  <img src="/assets/profile.png" alt="相手">-->
        <!--</div>-->
        <div class="chatting">
          <div class="says">
            <p><%= chat.sentence %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<form id="send-form">
  <input type="text" id="sentence" placeholder="入力してね" style="width:30%;">
  <input type="submit" value="送信" id="send">
  <input id="current_customer_id" type="hidden" value= "<%= current_customer.id %>">
  <input id="partner_id" type="hidden" value= "<%= @partner.id %>">
</form>
