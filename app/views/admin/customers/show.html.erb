<div class="container">
  <div class="row mt-4">
    <div class="col-3 mt-3 mb-3">
      <h5 class="text-center bg-light">企業詳細ページ</h5>
    </div>
  </div>

    <div class="col-lg-12">
      <div class="row">
        <table>
          <tr>
            <th>
              <% if @customer.image.attached? %>
                <%= image_tag @customer.image, size: "200x200" %>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th>会員ID</th>
            <td>No.<%= @customer.id %></td>
          </tr>
          <tr>
            <th>企業名</th>
            <td><%= @customer.company_name %></td>
          </tr>
            <tr>
            <th>企業名フリガナ</th>
            <td><%= @customer.company_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>代表者</th>
            <td><%= @customer.first_name %><%= @customer.last_name %></td>
          </tr>
          <tr>
            <th>代表者連絡先</th>
            <td><%= @customer.tel %></td>
        </tr>
        </table>
      </div>
    </div>
</div>