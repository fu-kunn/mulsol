<div class="container">

  <div class="row">
    <div class="col-12 mb-5">
      <h5 class="text-center col-4 mt-5 font-weight-bold">問い合わせ一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-12 mb-5">
      <table class="table table-hover table-inverse">
          <thead>
            <tr class="bg-light">
                <th>企業名</th>
                <th>メールアドレス</th>
                <th>用件</th>
            </tr>
          </thead>
          <tbody>
            <% @contacts.each do |contact| %>
              <tr data-href="/admin/contacts/<%= contact.id %>">
                <td class="col-3"><%= contact.company_name %></td>
                <td class="col-3"><%= contact.email %></td>
                <td><%= contact.subject %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>

<!--フッターを固定  -->
<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <%= paginate @contacts %>
    </div>
  </div>
</div>

<script>
jQuery( function($) {
    $('tbody tr[data-href]').addClass('clickable').click( function() {
        window.location = $(this).attr('data-href');
    }).find('a').hover( function() {
        $(this).parents('tr').unbind('click');
    }, function() {
        $(this).parents('tr').click( function() {
            window.location = $(this).attr('data-href');
        });
    });
});
</script>