            <div class="card-name">企業名:<%= @contact.company_name %></div>
            <div class="card-email">返信用メールアドレス:<%= @contact.email %></div>

            <div class="card-subject mt-3">【用件】</div>
            <div><%= @contact.subject %></div>

            <div class="card-message">【内容】</div>
            <div><%= @contact.message %></div>
          </div>
        </div>

    </div>
  </div>
</div>